{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "index.schema.json",
  "title": "Registry index.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "generatedAt", "components"],
  "properties": {
    "schemaVersion": { "type": "integer", "minimum": 1 },
    "generatedAt": { "type": "string" },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "name",
          "category",
          "description",
          "tags",
          "install",
          "import",
          "importPath",
          "api",
          "examples",
          "dependencies",
          "related"
        ],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9_]+$" },
          "name": { "type": "string" },
          "category": { "type": "string" },
          "description": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "version": { "type": "string" },

          "install": { "type": "string" },
          "import": { "type": "string" },
          "importPath": { "type": "string" },

          "api": {
            "type": "object",
            "additionalProperties": false,
            "required": ["constructors", "callbacks"],
            "properties": {
              "constructors": { "type": "array", "items": { "type": "string" } },
              "callbacks": { "type": "array", "items": { "type": "string" } }
            }
          },

          "examples": {
            "type": "object",
            "additionalProperties": false,
            "required": ["minimal"],
            "properties": {
              "minimal": { "type": "string" }
            }
          },

          "dependencies": {
            "type": "object",
            "additionalProperties": false,
            "required": ["pubspec", "shared"],
            "properties": {
              "pubspec": {
                "type": "object",
                "additionalProperties": { "type": "string" }
              },
              "shared": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },

          "related": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}
