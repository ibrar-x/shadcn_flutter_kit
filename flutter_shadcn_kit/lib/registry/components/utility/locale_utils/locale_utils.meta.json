{
  "$schema": "../readme_meta.schema.json",
  "schemaVersion": 1,
  "id": "locale_utils",
  "name": "Locale Utils",
  "description": "Date/time/duration unit helpers and file size formatting locales.",
  "install": "flutter_shadcn add locale_utils",
  "import": "import 'package:<your_app>/ui/shadcn/utility/locale_utils/locale_utils.dart';",
  "whenToUse": {
    "use": [
      "you need locale-aware file size labels.",
      "you need date/time/duration part helpers for pickers."
    ],
    "avoid": [
      "you only need basic `DateTime` formatting."
    ]
  },
  "examples": {
    "minimal": "final label = formatFileSize(1536, SizeUnitLocale.fileBytes);"
  },
  "patterns": [],
  "api": {
    "constructors": [],
    "callbacks": [],
    "functions": [
      "`formatFileSize`"
    ],
    "types": [
      "`SizeUnitLocale`",
      "`DatePart`, `TimePart`, `DurationPart`"
    ]
  },
  "theming": [
    "No theme hooks; these utilities are pure helpers."
  ],
  "accessibility": [
    "Use localized labels that users can read at a glance."
  ],
  "do": [
    "Use `SizeUnitLocale.fileBytes` or `SizeUnitLocale.fileBits` consistently."
  ],
  "dont": [
    "Mix binary and decimal units without clarifying."
  ],
  "related": [
    "shadcn_localizations",
    "shadcn_localizations_extensions"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
