{
  "schemaVersion": 1,
  "id": "divider",
  "name": "Divider",
  "description": "Horizontal and vertical separators with optional label support.",
  "install": "flutter_shadcn add divider",
  "import": "import 'package:<your_app>/ui/shadcn/display/divider/divider.dart';",
  "whenToUse": {
    "use": [
      "you need visual separation between sections.",
      "you want labeled separators."
    ],
    "avoid": [
      "spacing alone provides sufficient separation."
    ]
  },
  "examples": {
    "minimal": "const Divider()"
  },
  "patterns": [
    {
      "title": "Labeled divider",
      "code": "Divider(\n  child: const Text('Section'),\n)"
    },
    {
      "title": "Vertical divider",
      "code": "const VerticalDivider()"
    }
  ],
  "api": {
    "constructors": [
      "`Divider`",
      "`color`, `height`, `thickness`, `indent`, `endIndent`, `padding`",
      "`child` (`Widget?`) \u2014 optional label",
      "`VerticalDivider`",
      "`color`, `width`, `thickness`, `indent`, `endIndent`, `padding`",
      "`child` (`Widget?`) \u2014 optional label"
    ],
    "callbacks": []
  },
  "theming": [
    "`DividerTheme` provides defaults for color, thickness, and padding."
  ],
  "accessibility": [
    "Ensure labeled dividers use readable text sizes."
  ],
  "do": [
    "Use `indent`/`endIndent` to align with content edges."
  ],
  "dont": [
    "Overuse dividers where spacing is clearer."
  ],
  "related": [
    "layout/card"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
