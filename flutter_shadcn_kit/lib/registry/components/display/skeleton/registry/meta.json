{
  "id": "skeleton",
  "name": "Skeleton",
  "description": "Skeletonizer helpers with theme-aware config and extensions.",
  "category": "display",
  "tags": [
    "display",
    "loading",
    "animation"
  ],
  "dependencies": {
    "shared": [
      "theme",
      "style_value"
    ],
    "components": [
      "avatar"
    ],
    "pubspec": {
