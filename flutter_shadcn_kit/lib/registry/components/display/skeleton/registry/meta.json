      "skeletonizer": "^2.1.0+1"
    }
  },
  "files": [
    "_impl/themes/base/skeleton_theme.dart",
    "_impl/themes/config/skeleton_theme_config.dart",
    "_impl/themes/config/skeleton_theme_defaults.dart",
    "_impl/themes/config/skeleton_theme_schema.dart",
    "_impl/themes/config/skeleton_theme_tokens.dart",
    "skeleton.dart"
  ],
  "api": {
    "constructors": [
