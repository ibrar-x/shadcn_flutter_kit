{
  "$schema": "../readme_meta.schema.json",
  "schemaVersion": 1,
  "id": "number_ticker",
  "name": "Number Ticker",
  "description": "Animated number display with formatter or custom builder.",
  "install": "flutter_shadcn add number_ticker",
  "import": "import 'package:<your_app>/ui/shadcn/display/number_ticker/number_ticker.dart';",
  "whenToUse": {
    "use": [
      "you want smooth numeric transitions.",
      "you need a custom UI for changing numbers."
    ],
    "avoid": [
      "a static label is enough."
    ]
  },
  "examples": {
    "minimal": "NumberTicker(\n  number: 1200,\n  formatter: (value) => value.toStringAsFixed(0),\n)"
  },
  "patterns": [
    {
      "title": "Custom builder",
      "code": "NumberTicker.builder(\n  number: 42,\n  builder: (context, value, child) {\n    return Text(value.toStringAsFixed(1));\n  },\n)"
    }
  ],
  "api": {
    "constructors": [
      "`NumberTicker`",
      "`number` (`num`, required)",
      "`formatter` (`NumberTickerFormatted`, required)",
      "`initialNumber` (`num?`)",
      "`duration` (`Duration?`)",
      "`curve` (`Curve?`)",
      "`style` (`TextStyle?`)",
      "`NumberTicker.builder`",
      "`builder` (`NumberTickerBuilder`, required)",
      "`child` (`Widget?`)"
    ],
    "callbacks": []
  },
  "theming": [
    "`NumberTickerTheme` controls duration, curve, and text style."
  ],
  "accessibility": [
    "Keep number updates readable (avoid excessive frequency)."
  ],
  "do": [
    "Use `initialNumber` for smooth first transition."
  ],
  "dont": [
    "Format numbers inconsistently across the UI."
  ],
  "related": [
    "text"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
