  "id": "linear_progress_indicator",
  "name": "Linear Progress Indicator",
  "description": "Determinate/indeterminate progress bar with optional spark effects and theming.",
  "install": "flutter_shadcn add linear_progress_indicator",
  "import": "import 'package:<your_app>/ui/shadcn/display/linear_progress_indicator/linear_progress_indicator.dart';",
  "whenToUse": {
