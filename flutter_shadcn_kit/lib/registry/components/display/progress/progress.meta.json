{
  "schemaVersion": 1,
  "id": "progress",
  "name": "Progress",
  "description": "Normalized linear progress bar with theme overrides.",
  "install": "flutter_shadcn add progress",
  "import": "import 'package:<your_app>/ui/shadcn/display/progress/progress.dart';",
  "whenToUse": {
    "use": [
      "you want a themed linear progress bar.",
      "you need to normalize progress between custom min/max values."
    ],
    "avoid": [
      "you need a circular indicator."
    ]
  },
  "examples": {
    "minimal": "Progress(\n  progress: 40,\n  min: 0,\n  max: 100,\n)"
  },
  "patterns": [],
  "api": {
    "constructors": [
      "`Progress`",
      "`progress` (`double?`)",
      "`min` (`double`, default: `0.0`)",
      "`max` (`double`, default: `1.0`)",
      "`color`, `backgroundColor` (`Color?`)"
    ],
    "callbacks": []
  },
  "theming": [
    "`ProgressTheme` controls color, background, height, and radius."
  ],
  "accessibility": [
    "Provide a text label when progress value is meaningful."
  ],
  "do": [
    "Keep `progress` within `min` and `max`."
  ],
  "dont": [
    "Pass values outside of the min/max range."
  ],
  "related": [
    "linear_progress_indicator",
    "circular_progress_indicator"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
