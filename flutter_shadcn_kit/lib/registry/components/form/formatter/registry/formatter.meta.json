{
  "$schema": "../../../../readme_meta.schema.json",
  "schemaVersion": 1,
  "id": "formatter",
  "name": "Formatter",
  "description": "Reusable text input formatters (uppercase/lowercase, numeric, math, HEX, etc.) and helpers for selection clipping.",
  "install": "flutter_shadcn add formatter",
  "import": "import 'package:<your_app>/ui/shadcn/form/formatter/formatter.dart';",
  "whenToUse": {
    "use": [
      "you need consistent input formatting.",
      "you want ready-made numeric/time/hex formatters."
    ],
    "avoid": [
      "custom validation is sufficient without formatting."
    ]
  },
  "examples": {
    "minimal": "TextField(\n  inputFormatters: [TextInputFormatters.toUpperCase],\n)"
  },
  "patterns": [],
  "api": {
    "constructors": [
      "`TextInputFormatters`",
      "`toUpperCase`, `toLowerCase`",
      "`integerOnly(min, max)`",
      "`digitsOnly(min, max, decimalDigits)`",
      "`time(length)`",
      "`mathExpression(context)`",
      "`hex(hashPrefix)`",
      "`contraintToNewText` — helper for selection bounds."
    ],
    "callbacks": []
  },
  "theming": [
    "No theme dependencies."
  ],
  "accessibility": [
    "Ensure formatting doesn’t block screen-reader edits."
  ],
  "do": [
    "Combine formatters with validation for strict inputs."
  ],
  "dont": [
    "Use math expression formatting for plain text fields."
  ],
  "related": [
    "text_field",
    "formatted_input"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
