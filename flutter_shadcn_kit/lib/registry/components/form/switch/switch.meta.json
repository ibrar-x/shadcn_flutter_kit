{
  "$schema": "../readme_meta.schema.json",
  "schemaVersion": 1,
  "id": "switch",
  "name": "Switch",
  "description": "Toggle control for boolean values with themed styling.",
  "install": "flutter_shadcn add switch",
  "import": "import 'package:<your_app>/ui/shadcn/form/switch/switch.dart';",
  "whenToUse": {
    "use": [
      "you need a binary on/off control."
    ],
    "avoid": [
      "you need multi-state input."
    ]
  },
  "examples": {
    "minimal": "Switch(\n  value: enabled,\n  onChanged: (value) {},\n)"
  },
  "patterns": [],
  "api": {
    "constructors": [
      "`Switch`",
      "`value` (`bool`, required)",
      "`onChanged` (`ValueChanged<bool>?`)",
      "`enabled` (`bool?`)",
      "`ControlledSwitch` — controller-backed switch.",
      "`SwitchController` — controller."
    ],
    "callbacks": [
      "`onChanged`"
    ]
  },
  "theming": [
    "`SwitchTheme` controls size, colors, and border radius."
  ],
  "accessibility": [
    "Use descriptive labels for the on/off state."
  ],
  "do": [
    "Use switches for immediate effects."
  ],
  "dont": [
    "Use switches for multi-step workflows."
  ],
  "related": [
    "checkbox"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
