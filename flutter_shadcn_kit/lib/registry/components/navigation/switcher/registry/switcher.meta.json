{
  "$schema": "../../../../readme_meta.schema.json",
  "schemaVersion": 1,
  "id": "switcher",
  "name": "Switcher",
  "description": "Swipeable viewport that animates between children along an axis.",
  "install": "flutter_shadcn add switcher",
  "import": "import 'package:<your_app>/ui/shadcn/navigation/switcher/switcher.dart';",
  "whenToUse": {
    "use": [
      "you want swipe-based page switching."
    ],
    "avoid": [
      "a `PageView` is enough."
    ]
  },
  "examples": {
    "minimal": "Switcher(\n  index: 0,\n  direction: AxisDirection.right,\n  children: const [Text('A'), Text('B')],\n)"
  },
  "patterns": [],
  "api": {
    "constructors": [
      "`Switcher`",
      "`index` (`int`)",
      "`onIndexChanged` (`ValueChanged<int>?`)",
      "`direction` (`AxisDirection`, required)",
      "`children` (`List<Widget>`, required)",
      "`duration`, `curve`"
    ],
    "callbacks": []
  },
  "theming": [
    "No theme dependencies."
  ],
  "accessibility": [
    "Provide non-swipe navigation for keyboard users."
  ],
  "do": [
    "Keep child count small for performance."
  ],
  "dont": [
    "Use for forms without clear focus handling."
  ],
  "related": [
    "tab_container"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
