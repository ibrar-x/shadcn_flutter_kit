{
  "schemaVersion": 1,
  "id": "pagination",
  "name": "Pagination",
  "description": "Page navigation controls with skip, previous/next, and ellipsis handling.",
  "install": "flutter_shadcn add pagination",
  "import": "import 'package:<your_app>/ui/shadcn/navigation/pagination/pagination.dart';",
  "whenToUse": {
    "use": [
      "you need page-by-page navigation."
    ],
    "avoid": [
      "infinite scroll is preferred."
    ]
  },
  "examples": {
    "minimal": "Pagination(\n  page: 1,\n  total: 10,\n  onChanged: (page) {},\n)"
  },
  "patterns": [],
  "api": {
    "constructors": [
      "`Pagination`",
      "`page` (`int`, required)",
      "`total` (`int`, required)",
      "`onChanged` (`ValueChanged<int>?`)",
      "`showLabel`, `gap`, `siblingCount`, `boundaryCount`",
      "`PaginationTheme` \u2014 spacing and label visibility."
    ],
    "callbacks": []
  },
  "theming": [
    "`PaginationTheme` controls gap and label display."
  ],
  "accessibility": [
    "Provide labels for next/previous buttons."
  ],
  "do": [
    "Keep `page` within `total` range."
  ],
  "dont": [
    "Hide page count when users need context."
  ],
  "related": [
    "button"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
