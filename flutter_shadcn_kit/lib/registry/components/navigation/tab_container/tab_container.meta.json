{
  "$schema": "../readme_meta.schema.json",
  "schemaVersion": 1,
  "id": "tab_container",
  "name": "Tab Container",
  "description": "Coordinated tab state manager with customizable builders.",
  "install": "flutter_shadcn add tab_container",
  "import": "import 'package:<your_app>/ui/shadcn/navigation/tab_container/tab_container.dart';",
  "whenToUse": {
    "use": [
      "you need to coordinate tab selection and content."
    ],
    "avoid": [
      "a single `TabList` is enough."
    ]
  },
  "examples": {
    "minimal": "TabContainer(\n  index: 0,\n  onChanged: (index) {},\n  children: const [\n    TabItem(child: Text('Tab 1')),\n    TabItem(child: Text('Tab 2')),\n  ],\n)"
  },
  "patterns": [],
  "api": {
    "constructors": [
      "`TabContainer`",
      "`index` (`int?`)",
      "`onChanged` (`ValueChanged<int>?`)",
      "`children` (`List<Widget>`)",
      "`builder`, `childBuilder`",
      "`TabItem` / `KeyedTabItem` — tab items.",
      "`TabChildWidget` / `KeyedTabChildWidget` — tab content wrappers.",
      "`TabContainerTheme` — builder defaults."
    ],
    "callbacks": []
  },
  "theming": [
    "`TabContainerTheme` controls builders."
  ],
  "accessibility": [
    "Ensure selected tab state is announced."
  ],
  "do": [
    "Keep tab labels short."
  ],
  "dont": [
    "Rebuild heavy content unnecessarily on tab change."
  ],
  "related": [
    "tab_list",
    "tab_pane"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
