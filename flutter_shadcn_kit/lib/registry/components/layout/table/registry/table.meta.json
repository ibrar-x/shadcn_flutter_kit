{
  "$schema": "../../../../readme_meta.schema.json",
  "schemaVersion": 1,
  "id": "table",
  "name": "Table",
  "description": "Resizable table layout with headers, footers, and frozen cells.",
  "install": "flutter_shadcn add table",
  "import": "import 'package:<your_app>/ui/shadcn/layout/table/table.dart';",
  "whenToUse": {
    "use": [
      "you need a resizable, structured table layout."
    ],
    "avoid": [
      "a simple list view is enough."
    ]
  },
  "examples": {
    "minimal": "Table(\n  rows: const [\n    TableRow(cells: [TableCell(child: Text('A')), TableCell(child: Text('B'))]),\n  ],\n)"
  },
  "patterns": [],
  "api": {
    "constructors": [
      "`Table` — main table widget.",
      "`ResizableTable` — table with resizable columns.",
      "`TableHeader` / `TableFooter` — row types.",
      "`TableRow` — row model.",
      "`TableCell` — cell model.",
      "`ResizableTableController` — column sizing controller."
    ],
    "callbacks": []
  },
  "theming": [
    "`TableTheme`, `TableCellTheme`, `ResizableTableTheme`."
  ],
  "accessibility": [
    "Provide headers for columns where possible."
  ],
  "do": [
    "Use `ResizableTable` when users need column control."
  ],
  "dont": [
    "Render huge datasets without virtualization."
  ],
  "related": [
    "scrollable_client"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
