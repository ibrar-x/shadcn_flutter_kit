{
  "$schema": "../../../../readme_meta.schema.json",
  "schemaVersion": 1,
  "id": "collapsible",
  "name": "Collapsible",
  "description": "Independent sections that toggle their own visibility.",
  "install": "flutter_shadcn add collapsible",
  "import": "import 'package:<your_app>/ui/shadcn/layout/collapsible/collapsible.dart';",
  "whenToUse": {
    "use": [
      "you need independent expand/collapse sections."
    ],
    "avoid": [
      "only one section should be open (use `accordion`)."
    ]
  },
  "examples": {
    "minimal": "Collapsible(\n  children: const [\n    CollapsibleTrigger(title: Text('Toggle')),\n    CollapsibleContent(child: Text('Hidden content')),\n  ],\n)"
  },
  "patterns": [],
  "api": {
    "constructors": [
      "`Collapsible`",
      "`children` (`List<Widget>`, required)",
      "`isExpanded` (`bool?`)",
      "`onExpansionChanged` (`ValueChanged<bool>?`)",
      "`CollapsibleTrigger` — interactive header.",
      "`CollapsibleContent` — animated content panel.",
      "`CollapsibleTheme` — spacing and styling."
    ],
    "callbacks": []
  },
  "theming": [
    "`CollapsibleTheme` controls padding and animation defaults."
  ],
  "accessibility": [
    "Make triggers keyboard focusable."
  ],
  "do": [
    "Keep content concise to avoid long scroll jumps."
  ],
  "dont": [
    "Nest collapsibles without clear hierarchy."
  ],
  "related": [
    "accordion"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
