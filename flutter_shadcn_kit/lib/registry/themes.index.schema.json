{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://flutter-shadcn.github.io/registry-directory/registry/themes.index.schema.v1.json",
  "title": "Registry Themes Index Schema",
  "description": "Lightweight index listing available themes for a registry. Used for `theme list` without downloading full theme preset data.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "themes"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "schemaVersion": {
      "type": "integer",
      "const": 1
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "defaultThemeId": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9_\\-]{1,63}$",
      "description": "Optional default theme id for this registry."
    },
    "themes": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "#/$defs/themeIndexEntry"
      }
    }
  },
  "$defs": {
    "themeIndexEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "file"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9_\\-]{1,63}$",
          "description": "Stable theme identifier used in CLI commands and config.json."
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 120
        },
        "description": {
          "type": "string",
          "maxLength": 500
        },
        "file": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500,
          "pattern": "^(?!/)(?!.*\\s)(?!.*\\.\\./)(?!.*\\./\\./)[-a-zA-Z0-9_./]+$",
          "description": "Registry-relative path to the full theme preset JSON file."
        },
        "preview": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "primary": {
              "type": "string",
              "pattern": "^0x[0-9A-Fa-f]{8}$"
            },
            "background": {
              "type": "string",
              "pattern": "^0x[0-9A-Fa-f]{8}$"
            }
          },
          "description": "Optional lightweight preview colors for CLI display."
        }
      }
    }
  }
}