{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://flutter-shadcn.github.io/registry-directory/registry/themes.schema.v1.json",
  "title": "Registry Theme Preset Schema",
  "description": "Schema for a single theme preset JSON file that can be converted into a Dart RegistryThemePreset. Designed for per-theme files referenced from themes.index.json. All colors are ARGB hex strings like '0xFFEFF1F5'.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "id",
    "light",
    "dark"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "schemaVersion": {
      "type": "integer",
      "const": 1
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9_\\-]{1,63}$",
      "description": "Stable theme identifier used by the CLI and stored in .shadcn/config.json as themeId."
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "light": {
      "$ref": "#/$defs/colorScheme"
    },
    "dark": {
      "$ref": "#/$defs/colorScheme"
    },
    "tokens": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "light": {
          "$ref": "#/$defs/tokens"
        },
        "dark": {
          "$ref": "#/$defs/tokens"
        }
      },
      "description": "Optional design tokens for the preset. If present, each side may provide radius/spacing/tracking/shadows/fonts."
    }
  },
  "$defs": {
    "color": {
      "type": "string",
      "pattern": "^0x[0-9A-Fa-f]{8}$",
      "description": "ARGB hex string: 0xAARRGGBB"
    },
    "colorScheme": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "background",
        "foreground",
        "card",
        "cardForeground",
        "popover",
        "popoverForeground",
        "primary",
        "primaryForeground",
        "secondary",
        "secondaryForeground",
        "muted",
        "mutedForeground",
        "accent",
        "accentForeground",
        "destructive",
        "destructiveForeground",
        "border",
        "input",
        "ring",
        "chart1",
        "chart2",
        "chart3",
        "chart4",
        "chart5",
        "sidebar",
        "sidebarForeground",
        "sidebarPrimary",
        "sidebarPrimaryForeground",
        "sidebarAccent",
        "sidebarAccentForeground",
        "sidebarBorder",
        "sidebarRing"
      ],
      "properties": {
        "background": {
          "$ref": "#/$defs/color"
        },
        "foreground": {
          "$ref": "#/$defs/color"
        },
        "card": {
          "$ref": "#/$defs/color"
        },
        "cardForeground": {
          "$ref": "#/$defs/color"
        },
        "popover": {
          "$ref": "#/$defs/color"
        },
        "popoverForeground": {
          "$ref": "#/$defs/color"
        },
        "primary": {
          "$ref": "#/$defs/color"
        },
        "primaryForeground": {
          "$ref": "#/$defs/color"
        },
        "secondary": {
          "$ref": "#/$defs/color"
        },
        "secondaryForeground": {
          "$ref": "#/$defs/color"
        },
        "muted": {
          "$ref": "#/$defs/color"
        },
        "mutedForeground": {
          "$ref": "#/$defs/color"
        },
        "accent": {
          "$ref": "#/$defs/color"
        },
        "accentForeground": {
          "$ref": "#/$defs/color"
        },
        "destructive": {
          "$ref": "#/$defs/color"
        },
        "destructiveForeground": {
          "$ref": "#/$defs/color"
        },
        "border": {
          "$ref": "#/$defs/color"
        },
        "input": {
          "$ref": "#/$defs/color"
        },
        "ring": {
          "$ref": "#/$defs/color"
        },
        "chart1": {
          "$ref": "#/$defs/color"
        },
        "chart2": {
          "$ref": "#/$defs/color"
        },
        "chart3": {
          "$ref": "#/$defs/color"
        },
        "chart4": {
          "$ref": "#/$defs/color"
        },
        "chart5": {
          "$ref": "#/$defs/color"
        },
        "sidebar": {
          "$ref": "#/$defs/color"
        },
        "sidebarForeground": {
          "$ref": "#/$defs/color"
        },
        "sidebarPrimary": {
          "$ref": "#/$defs/color"
        },
        "sidebarPrimaryForeground": {
          "$ref": "#/$defs/color"
        },
        "sidebarAccent": {
          "$ref": "#/$defs/color"
        },
        "sidebarAccentForeground": {
          "$ref": "#/$defs/color"
        },
        "sidebarBorder": {
          "$ref": "#/$defs/color"
        },
        "sidebarRing": {
          "$ref": "#/$defs/color"
        }
      }
    },
    "tokens": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "radius": {
          "type": "number",
          "minimum": 0,
          "maximum": 5,
          "description": "Corner radius scale factor used by the theme system. Recommended range 0..1, but allows larger for experimentation."
        },
        "spacing": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "base"
          ],
          "properties": {
            "base": {
              "type": "number",
              "minimum": 0,
              "maximum": 64,
              "description": "Base spacing unit (e.g. 3.84). Your Dart layer can map this into a SpacingScale(base)."
            }
          }
        },
        "tracking": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "normal": {
              "type": "number",
              "minimum": -5,
              "maximum": 5
            },
            "tight": {
              "type": "number",
              "minimum": -5,
              "maximum": 5
            },
            "wide": {
              "type": "number",
              "minimum": -5,
              "maximum": 5
            }
          },
          "description": "Letter-spacing/tracking values in logical pixels (or your chosen unit)."
        },
        "shadows": {
          "$ref": "#/$defs/shadowScale"
        },
        "fontSans": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "fontSerif": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "fontMono": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        }
      }
    },
    "shadowScale": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "shadow2xs": {
          "$ref": "#/$defs/shadowList"
        },
        "shadowXs": {
          "$ref": "#/$defs/shadowList"
        },
        "shadowSm": {
          "$ref": "#/$defs/shadowList"
        },
        "shadow": {
          "$ref": "#/$defs/shadowList"
        },
        "shadowMd": {
          "$ref": "#/$defs/shadowList"
        },
        "shadowLg": {
          "$ref": "#/$defs/shadowList"
        },
        "shadowXl": {
          "$ref": "#/$defs/shadowList"
        },
        "shadow2xl": {
          "$ref": "#/$defs/shadowList"
        }
      }
    },
    "shadowList": {
      "type": "array",
      "maxItems": 8,
      "items": {
        "$ref": "#/$defs/boxShadow"
      }
    },
    "boxShadow": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "x",
        "y",
        "blur",
        "spread",
        "color"
      ],
      "properties": {
        "x": {
          "type": "number",
          "minimum": -200,
          "maximum": 200,
          "description": "X offset (maps to Offset(x, y))."
        },
        "y": {
          "type": "number",
          "minimum": -200,
          "maximum": 200,
          "description": "Y offset (maps to Offset(x, y))."
        },
        "blur": {
          "type": "number",
          "minimum": 0,
          "maximum": 400,
          "description": "Blur radius."
        },
        "spread": {
          "type": "number",
          "minimum": -400,
          "maximum": 400,
          "description": "Spread radius."
        },
        "color": {
          "$ref": "#/$defs/color"
        }
      }
    }
  }
}