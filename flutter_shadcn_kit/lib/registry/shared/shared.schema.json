{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "shared.schema.json",
  "title": "Shared group metadata schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "id", "files"],
  "properties": {
    "schemaVersion": { "type": "integer", "minimum": 1 },

    "id": {
      "type": "string",
      "description": "Shared group id referenced by component dependencies.shared",
      "pattern": "^[a-z0-9_]+$"
    },

    "name": { "type": "string" },
    "description": { "type": "string" },

    "files": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/sharedFile" }
    },

    "pubspec": {
      "type": "object",
      "description": "Optional pubspec deps required by this shared group",
      "additionalProperties": { "type": "string" }
    },

    "dependsOnShared": {
      "type": "array",
      "description": "Optional shared-group dependencies (shared groups can depend on other shared groups)",
      "items": { "type": "string", "pattern": "^[a-z0-9_]+$" },
      "uniqueItems": true
    }
  },

  "$defs": {
    "sharedFile": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "symbols"],
      "properties": {
        "path": {
          "type": "string",
          "description": "Path relative to shared group root",
          "minLength": 1
        },
        "symbols": {
          "type": "array",
          "items": { "$ref": "#/$defs/symbol" }
        }
      }
    },

    "symbol": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "name", "signature"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["class", "mixin", "extension", "enum", "typedef", "function", "const", "variable"]
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "signature": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": ["string", "null"],
          "description": "Optional short description for this symbol"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "doc": {
          "type": ["string", "null"],
          "description": "Optional doc comment extracted for this symbol"
        },
        "visibility": {
          "type": "string",
          "enum": ["public", "internal"],
          "description": "internal symbols must not be used by skills or app code"
        },
        "since": {
          "type": "string",
          "description": "Optional version or date when introduced"
        },
        "deprecated": {
          "type": "object",
          "additionalProperties": false,
          "required": ["isDeprecated"],
          "properties": {
            "isDeprecated": { "type": "boolean" },
            "message": { "type": "string" }
          }
        },
        "usageExamples": {
          "type": "array",
          "description": "Optional minimal usage examples for the symbol",
          "items": { "type": "string" }
        }
      }
    }
  }
}
