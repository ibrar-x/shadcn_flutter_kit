{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "shared_manifest.schema.json",
  "title": "Shared folder manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "manifestVersion",
    "schemaVersion",
    "generatedAt",
    "root",
    "files",
    "groups",
    "missingFiles",
    "ungroupedFiles"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "manifestVersion": { "type": "integer", "minimum": 1 },
    "schemaVersion": { "type": "integer", "minimum": 1 },
    "generatedAt": { "type": "string" },
    "root": { "type": "string" },
    "files": {
      "type": "array",
      "items": { "type": "string" }
    },
    "groups": {
      "type": "array",
      "items": { "$ref": "#/$defs/group" }
    },
    "missingFiles": {
      "type": "array",
      "items": { "type": "string" }
    },
    "ungroupedFiles": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "$defs": {
    "group": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "files"],
      "properties": {
        "id": { "type": "string" },
        "description": { "type": "string" },
        "files": {
          "type": "array",
          "items": { "$ref": "#/$defs/groupFile" }
        }
      }
    },
    "groupFile": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "source", "destination"],
      "properties": {
        "path": { "type": "string" },
        "source": { "type": "string" },
        "destination": { "type": "string" }
      }
    }
  }
}
