{
  "$schema": "../../../../manifests/readme_meta.schema.json",
  "schemaVersion": 1,
  "id": "stage_container",
  "name": "Stage Container",
  "description": "Responsive container that snaps to breakpoint widths.",
  "install": "flutter_shadcn add stage_container",
  "import": "import 'package:<your_app>/ui/shadcn/layout/stage_container/stage_container.dart';",
  "whenToUse": {
    "use": [
      "you want a centered, breakpoint-aware layout."
    ],
    "avoid": [
      "a simple `Container` or `ConstrainedBox` is enough."
    ]
  },
  "examples": {
    "minimal": "StageContainer(\n  builder: (context, padding) => Padding(\n    padding: padding,\n    child: const Text('Content'),\n  ),\n)"
  },
  "patterns": [],
  "api": {
    "constructors": [
      "`StageContainer`",
      "`breakpoint` (`StageBreakpoint?`)",
      "`padding` (`EdgeInsetsGeometry?`)",
      "`builder` (`Widget Function(BuildContext, EdgeInsetsGeometry)`, required)",
      "`StageBreakpoint` — `constant`, `staged`, `defaultBreakpoints`.",
      "`StageContainerTheme` — padding/breakpoint defaults."
    ],
    "callbacks": []
  },
  "theming": [
    "`StageContainerTheme` controls breakpoint strategy and padding."
  ],
  "accessibility": [
    "Ensure content remains readable at small widths."
  ],
  "do": [
    "Use `defaultBreakpoints` for standard responsive layouts."
  ],
  "dont": [
    "Stack multiple stage containers without necessity."
  ],
  "related": [
    "media_query"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
