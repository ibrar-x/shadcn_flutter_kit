{
  "$schema": "../../../../manifests/readme_meta.schema.json",
  "schemaVersion": 1,
  "id": "accordion",
  "name": "Accordion",
  "description": "Single-expansion accordion with configurable triggers and theming.",
  "install": "flutter_shadcn add accordion",
  "import": "import 'package:<your_app>/ui/shadcn/layout/accordion/accordion.dart';",
  "whenToUse": {
    "use": [
      "you need collapsible sections with one open at a time."
    ],
    "avoid": [
      "multiple sections should stay open (use `collapsible`)."
    ]
  },
  "examples": {
    "minimal": "Accordion(\n  items: const [\n    AccordionItem(title: Text('Title'), content: Text('Content')),\n  ],\n)"
  },
  "patterns": [],
  "api": {
    "constructors": [
      "`Accordion` — takes `items` list.",
      "`AccordionItem` — section with `title`, `content`.",
      "`AccordionTrigger` — interactive header widget.",
      "`AccordionTheme` — theme for spacing and styles."
    ],
    "callbacks": []
  },
  "theming": [
    "`AccordionTheme` controls spacing, colors, and animation defaults."
  ],
  "accessibility": [
    "Ensure triggers are keyboard focusable."
  ],
  "do": [
    "Keep titles short and descriptive."
  ],
  "dont": [
    "Nest large scrollables without constraints."
  ],
  "related": [
    "collapsible"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
