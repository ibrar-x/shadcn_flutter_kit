{
  "$schema": "../../../../manifests/readme_meta.schema.json",
  "schemaVersion": 1,
  "id": "navigation_menu",
  "name": "Navigation Menu",
  "description": "Dropdown-style navigation menu with popovers, groups, and keyboard navigation.",
  "install": "flutter_shadcn add navigation_menu",
  "import": "import 'package:<your_app>/ui/shadcn/navigation/navigation_menu/navigation_menu.dart';",
  "whenToUse": {
    "use": [
      "you need top-level navigation with dropdown content."
    ],
    "avoid": [
      "a simple link list is enough."
    ]
  },
  "examples": {
    "minimal": "NavigationMenu(\n  children: const [\n    NavigationMenuItem(child: Text('Products')),\n  ],\n)"
  },
  "patterns": [],
  "api": {
    "constructors": [
      "`NavigationMenu`",
      "`children` (`List<Widget>`, required)",
      "`surfaceOpacity`, `surfaceBlur`, `margin`, `offset`",
      "`NavigationMenuItem` — item with optional `content`.",
      "`NavigationMenuContent` — content entry.",
      "`NavigationMenuContentList` — grid/list of contents.",
      "`NavigationMenuTheme` — surface styling."
    ],
    "callbacks": []
  },
  "theming": [
    "`NavigationMenuTheme` controls popover surface and offsets."
  ],
  "accessibility": [
    "Ensure menu items are keyboard focusable."
  ],
  "do": [
    "Group related items with content lists."
  ],
  "dont": [
    "Use overly long labels in the top bar."
  ],
  "related": [
    "navigation_bar",
    "popover"
  ],
  "registryRules": [
    "One public class per file",
    "Helpers under `_impl/`"
  ]
}
